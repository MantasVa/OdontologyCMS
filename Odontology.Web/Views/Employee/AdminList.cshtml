@model IEnumerable<EmployeeTableViewModel>

@{
    ViewBag.Title = "darbuotojai";
    Layout = "_AdminLayout";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <div class="card mb-4 mt-5">
                <div class="card-header"><i class="fas fa-table mr-1"></i>Darbuotojai</div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Vardas</th>
                                    <th>El. paštas</th>
                                    <th>Veiksmai</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model)
                                {
                                    <tr>
                                        <td>@employee.Name @employee.Surname</td>
                                        <td>@employee.Email</td>
                                        <td>
                                            <div>
                                                <a class="btn list-button" asp-action="Details" asp-route-id="@employee.Id"><i class="fas fa-info-circle"></i></a>
                                                <a class="btn list-button" asp-action="Edit" asp-route-id="@employee.Id"><i class="fas fa-edit"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
