@model ChangeRolesViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-action="EditRoles" method="post">
    @{
        var user = await userManager.GetUserAsync(User);
        string editorName = $"{user.Name} {user.Surname}";
    }
    
    <h3>Priskirti naujas @user.Name @user.Surname roles</h3>

    <input type="hidden" asp-for="UserId" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <select asp-for="RoleNames" asp-items="Model.Roles" class="custom-select" multiple>
        </select>
    </div>

    <div>
        <button type="submit" class="btn btn-success">Priskirti Naujas Roles</button>
    </div>
</form> 